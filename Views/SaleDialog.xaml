<Window x:Class="PokemonCardManager.Views.SaleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCardManager.Views"
        mc:Ignorable="d"
        Title="Registra Vendita" Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        MinHeight="500" MinWidth="450">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Intestazione con gradiente -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" 
                CornerRadius="12" Padding="20,15" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’° Registra Vendita" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" TextAlignment="Center"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      Padding="0,0,5,0">
            <StackPanel>
                <!-- Sezione Selezione Carta -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Selezione Carta" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryColor}"
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Carta *" 
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   Margin="0,0,0,6"/>
                        <ComboBox x:Name="cmbCard" 
                                  DisplayMemberPath="Name" 
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,0,15"
                                  SelectionChanged="CmbCard_SelectionChanged">
                            <ComboBox.ToolTip>
                                <ToolTip Content="Seleziona la carta che hai venduto"/>
                            </ComboBox.ToolTip>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Sezione Dettagli Vendita -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Dettagli Vendita" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryColor}"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Data Vendita -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Data Vendita *" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <DatePicker x:Name="dpSaleDate" 
                                        Grid.Row="1" Grid.Column="0"
                                        Style="{StaticResource DatePickerStyle}"
                                        Margin="0,0,0,15">
                                <DatePicker.ToolTip>
                                    <ToolTip Content="Seleziona la data di vendita"/>
                                </DatePicker.ToolTip>
                            </DatePicker>

                            <!-- QuantitÃ  -->
                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Text="QuantitÃ  *" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtQuantity" 
                                     Grid.Row="1" Grid.Column="2"
                                     Text="1"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15">
                                <TextBox.ToolTip>
                                    <ToolTip Content="Inserisci la quantitÃ  di carte vendute"/>
                                </TextBox.ToolTip>
                            </TextBox>

                            <!-- Prezzo di Vendita -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Prezzo di Vendita (â‚¬) *" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtSalePrice" 
                                     Grid.Row="3" Grid.Column="0"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15">
                                <TextBox.ToolTip>
                                    <ToolTip Content="Prezzo totale ricevuto per la vendita"/>
                                </TextBox.ToolTip>
                            </TextBox>

                            <!-- Fee -->
                            <TextBlock Grid.Row="2" Grid.Column="2"
                                       Text="Fee Commissione (â‚¬)" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtFee" 
                                     Text="0"
                                     Grid.Row="3" Grid.Column="2"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15">
                                <TextBox.ToolTip>
                                    <ToolTip Content="Commissioni pagate alla piattaforma di vendita"/>
                                </TextBox.ToolTip>
                            </TextBox>
                        </Grid>

                        <!-- Costo Spedizione -->
                        <TextBlock Text="Costo Spedizione (â‚¬)" 
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtShippingCost" 
                                 Text="0"
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,15">
                            <TextBox.ToolTip>
                                <ToolTip Content="Costo sostenuto per la spedizione della carta"/>
                            </TextBox.ToolTip>
                        </TextBox>
                    </StackPanel>
                </Border>

                <!-- Sezione Calcolo Profitto -->
                <Border Style="{StaticResource CardStyle}" 
                        Background="{StaticResource SuccessColor}"
                        Opacity="0.1"
                        BorderBrush="{StaticResource SuccessColor}"
                        BorderThickness="2">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ’µ Profitto Netto" 
                                           FontSize="16" FontWeight="SemiBold" 
                                           Foreground="{StaticResource SuccessColor}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Prezzo vendita - Fee - Spedizione - Costo acquisto" 
                                           FontSize="11" 
                                           Foreground="{StaticResource TextSecondaryColor}"
                                           Opacity="0.8"/>
                            </StackPanel>
                            
                            <TextBlock x:Name="txtNetProfit" 
                                       Text="â‚¬ 0,00" 
                                       Grid.Column="1"
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       VerticalAlignment="Center"
                                       Margin="20,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annulla" Width="120" Height="45"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,12,0" 
                    Click="BtnCancel_Click">
                <Button.ToolTip>
                    <ToolTip Content="Annulla l'operazione (ESC)"/>
                </Button.ToolTip>
            </Button>
            <Button Content="Salva" Width="120" Height="40"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="BtnSave_Click">
                <Button.ToolTip>
                    <ToolTip Content="Salva la vendita (Enter)"/>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
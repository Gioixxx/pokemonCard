<Window x:Class="PokemonCardManager.Views.SaleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCardManager.Views"
        mc:Ignorable="d"
        Title="Registra Vendita" Height="400" Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Intestazione -->
        <TextBlock Grid.Row="0" Text="Registra Vendita" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Carta *" Margin="0,5,0,2"/>
            <ComboBox x:Name="cmbCard" DisplayMemberPath="Name" Margin="0,0,0,10" SelectionChanged="CmbCard_SelectionChanged"/>

            <TextBlock Text="Data Vendita *" Margin="0,5,0,2"/>
            <DatePicker x:Name="dpSaleDate" Margin="0,0,0,10"/>

            <TextBlock Text="Prezzo di Vendita (€) *" Margin="0,5,0,2"/>
            <TextBox x:Name="txtSalePrice" Margin="0,0,0,10"/>

            <TextBlock Text="Fee (€)" Margin="0,5,0,2"/>
            <TextBox x:Name="txtFee" Text="0" Margin="0,0,0,10"/>

            <TextBlock Text="Costo Spedizione (€)" Margin="0,5,0,2"/>
            <TextBox x:Name="txtShippingCost" Text="0" Margin="0,0,0,10"/>

            <TextBlock Text="Quantità" Margin="0,5,0,2"/>
            <TextBox x:Name="txtQuantity" Text="1" Margin="0,0,0,10"/>

            <TextBlock Text="Profitto Netto:" FontWeight="Bold" Margin="0,10,0,2"/>
            <TextBlock x:Name="txtNetProfit" Text="€ 0,00" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Annulla" Width="100" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="Salva" Width="100" Background="{StaticResource PrimaryColor}" Foreground="White" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
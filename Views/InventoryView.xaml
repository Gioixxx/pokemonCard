<Page x:Class="PokemonCardManager.Views.InventoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokemonCardManager.Views"
      xmlns:vm="clr-namespace:PokemonCardManager.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1060"
      Title="Inventario"
      Background="{StaticResource BackgroundColor}">
    <Page.Resources>
        <vm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <vm:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <vm:GreaterThanOneToVisibilityConverter x:Key="GreaterThanOneToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Intestazione -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ“¦ Inventario Carte" 
                   Style="{StaticResource TitleTextStyle}"/>

        <!-- Barra di ricerca e filtri -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         x:Name="txtSearch" 
                         Margin="0,0,15,0" 
                         Style="{StaticResource TextBoxStyle}"
                         TextChanged="TxtSearch_TextChanged"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.ToolTip>
                        <ToolTip Content="Cerca per nome, set o numero..."/>
                    </TextBox.ToolTip>
                </TextBox>
                
                <ComboBox Grid.Column="1" 
                          x:Name="cmbFilter" 
                          Width="180" 
                          Margin="0,0,15,0" 
                          Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="CmbFilter_SelectionChanged">
                    <ComboBoxItem Content="Tutti i set" IsSelected="True"/>
                    <ComboBoxItem Content="Per raritÃ "/>
                    <ComboBoxItem Content="Per lingua"/>
                    <ComboBoxItem Content="Per condizione"/>
                </ComboBox>

                <Button Grid.Column="2" 
                        Content="ðŸ”„ Aggiorna" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RefreshCommand}"
                        Margin="0,0,15,0"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.ToolTip>
                        <ToolTip Content="Ricarica i dati dal database"/>
                    </Button.ToolTip>
                </Button>
                
                <Button Grid.Column="3" 
                        Content="âž• Aggiungi Carta" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddCardCommand}">
                    <Button.ToolTip>
                        <ToolTip Content="Aggiungi una nuova carta alla collezione (Ctrl+N)"/>
                    </Button.ToolTip>
                </Button>
            </Grid>
        </Border>

        <!-- Tabella carte con loading indicator -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Border Style="{StaticResource CardStyle}" Padding="0">
                <Grid>
                    <DataGrid x:Name="dgCards" 
                             Style="{StaticResource DataGridStyle}" 
                             ItemsSource="{Binding Cards}" 
                             SelectionChanged="DgCards_SelectionChanged"
                             ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                             EnableRowVirtualization="True"
                             EnableColumnVirtualization="True"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Set" Binding="{Binding Set}" Width="120"/>
                            <DataGridTextColumn Header="Numero" Binding="{Binding Number}" Width="80"/>
                            <DataGridTextColumn Header="RaritÃ " Binding="{Binding Rarity}" Width="100"/>
                            <DataGridTextColumn Header="Lingua" Binding="{Binding Language}" Width="80"/>
                            <DataGridTextColumn Header="Condizione" Binding="{Binding Condition}" Width="100"/>
                            <DataGridTextColumn Header="Prezzo Acquisto" Binding="{Binding PurchasePrice, StringFormat=â‚¬ {0:N2}}" Width="130"/>
                            <DataGridTextColumn Header="Prezzo Attuale" Binding="{Binding CurrentPrice, StringFormat=â‚¬ {0:N2}}" Width="130"/>
                            <DataGridTextColumn Header="QuantitÃ " Binding="{Binding Quantity}" Width="90"/>
                            <DataGridTextColumn Header="Valore Totale" Binding="{Binding TotalValue, StringFormat=â‚¬ {0:N2}}" Width="130"/>
                            <DataGridTextColumn Header="Profitto Stimato" Binding="{Binding EstimatedProfit, StringFormat=â‚¬ {0:N2}}" Width="140"/>
                            <DataGridTemplateColumn Width="120" Header="Azioni">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="âœï¸" 
                                                    Style="{StaticResource IconButtonStyle}"
                                                    ToolTip="Modifica carta"
                                                    Command="{Binding DataContext.EditCardCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Style="{StaticResource IconButtonStyle}"
                                                    ToolTip="Elimina carta"
                                                    Command="{Binding DataContext.DeleteCardCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Loading Overlay -->
                    <Border Background="#CC000000" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="â³ Caricamento..." 
                                     Foreground="White" 
                                     FontSize="16" 
                                     Margin="0,0,0,10"/>
                            <ProgressBar IsIndeterminate="True" 
                                        Width="200" 
                                        Height="4"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Paginazione -->
        <Border Grid.Row="3" 
                Style="{StaticResource CardStyle}" 
                Margin="0,0,0,20"
                Visibility="{Binding TotalPages, Converter={StaticResource GreaterThanOneToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Page Size Selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Elementi per pagina:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <ComboBox Width="80" 
                             SelectedValue="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                             SelectedValuePath="Tag">
                        <ComboBoxItem Tag="25">25</ComboBoxItem>
                        <ComboBoxItem Tag="50" IsSelected="True">50</ComboBoxItem>
                        <ComboBoxItem Tag="100">100</ComboBoxItem>
                        <ComboBoxItem Tag="200">200</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Page Info and Navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding PageInfo}" 
                             VerticalAlignment="Center" 
                             Margin="0,0,20,0"
                             FontWeight="Medium"/>
                    
                    <Button Content="â®" 
                          Command="{Binding FirstPageCommand}" 
                          Style="{StaticResource IconButtonStyle}"
                          ToolTip="Prima pagina"
                          Margin="0,0,5,0"/>
                    <Button Content="â—€" 
                          Command="{Binding PreviousPageCommand}" 
                          Style="{StaticResource IconButtonStyle}"
                          ToolTip="Pagina precedente"
                          Margin="0,0,5,0"/>
                    <TextBox Text="{Binding CurrentPage, UpdateSourceTrigger=LostFocus}" 
                           Width="50" 
                           TextAlignment="Center"
                           Margin="5,0"
                           VerticalContentAlignment="Center"/>
                    <TextBlock Text="di" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="{Binding TotalPages}" 
                             VerticalAlignment="Center" 
                             FontWeight="Bold"
                             Margin="5,0,5,0"/>
                    <Button Content="â–¶" 
                          Command="{Binding NextPageCommand}" 
                          Style="{StaticResource IconButtonStyle}"
                          ToolTip="Pagina successiva"
                          Margin="5,0,5,0"/>
                    <Button Content="â­" 
                          Command="{Binding LastPageCommand}" 
                          Style="{StaticResource IconButtonStyle}"
                          ToolTip="Ultima pagina"
                          Margin="5,0"/>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Column="2" 
                         Text="{Binding StatusMessage}" 
                         VerticalAlignment="Center"
                         Foreground="{StaticResource AccentColor}"
                         FontStyle="Italic"
                         Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- Riepilogo Statistiche -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Style="{StaticResource StatCardStyle}"
                    Background="{StaticResource InfoColor}">
                <StackPanel>
                    <TextBlock Text="Totale Carte" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalCards" 
                               Text="0" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" 
                    Style="{StaticResource StatCardStyle}"
                    Background="{StaticResource SuccessColor}">
                <StackPanel>
                    <TextBlock Text="Valore Totale" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalValue" 
                               Text="â‚¬ 0,00" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" 
                    Style="{StaticResource StatCardStyle}"
                    Background="{StaticResource AccentColor}">
                <StackPanel>
                    <TextBlock Text="Profitto Stimato" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalProfit" 
                               Text="â‚¬ 0,00" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

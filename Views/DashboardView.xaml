<Page x:Class="PokemonCardManager.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokemonCardManager.Views"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1060"
      Title="Dashboard"
      Background="{StaticResource BackgroundColor}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Intestazione -->
            <TextBlock Grid.Row="0" 
                       Text="ðŸ“Š Dashboard" 
                       Style="{StaticResource TitleTextStyle}"/>

            <!-- Statistiche principali -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Valore Collezione -->
                <Border Grid.Column="0" 
                        Style="{StaticResource StatCardStyle}"
                        Background="{StaticResource PrimaryGradient}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’Ž Valore Collezione" 
                                   Foreground="White" 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Opacity="0.95"/>
                        <TextBlock Text="{Binding CollectionValueFormatted}" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Totale Speso -->
                <Border Grid.Column="1" 
                        Style="{StaticResource StatCardStyle}"
                        Background="{StaticResource SecondaryColor}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¸ Totale Speso" 
                                   Foreground="White" 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Opacity="0.95"/>
                        <TextBlock Text="{Binding TotalSpentFormatted}" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Totale Incassato -->
                <Border Grid.Column="2" 
                        Style="{StaticResource StatCardStyle}"
                        Background="{StaticResource SuccessColor}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Totale Incassato" 
                                   Foreground="White" 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Opacity="0.95"/>
                        <TextBlock Text="{Binding TotalEarnedFormatted}" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ROI Medio -->
                <Border Grid.Column="3" 
                        Style="{StaticResource StatCardStyle}"
                        Background="{StaticResource InfoColor}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ ROI Medio" 
                                   Foreground="White" 
                                   FontSize="13" 
                                   FontWeight="Medium" 
                                   Opacity="0.95"/>
                        <TextBlock Text="{Binding AverageROIFormatted}" 
                                   Foreground="White" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Grafico a torta dei set piÃ¹ redditizi -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,0,20">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="ðŸŽ¯ Set PiÃ¹ Redditizi" 
                               Style="{StaticResource SubtitleTextStyle}"/>
                    <lvc:PieChart Grid.Row="1" 
                                  x:Name="pieChartSets" 
                                  Series="{Binding PieSeries}"
                                  Height="350"/>
                </Grid>
            </Border>

            <!-- Grafico a barre dell'andamento vendite -->
            <Border Grid.Row="3" 
                    Style="{StaticResource CardStyle}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="ðŸ“Š Andamento Vendite" 
                               Style="{StaticResource SubtitleTextStyle}"/>
                    <lvc:CartesianChart Grid.Row="1" 
                                        x:Name="barChartSales" 
                                        Series="{Binding BarSeries}" 
                                        XAxes="{Binding XAxes}" 
                                        YAxes="{Binding YAxes}"
                                        Height="350"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>

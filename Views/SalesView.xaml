<Page x:Class="PokemonCardManager.Views.SalesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PokemonCardManager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1060"
      Title="Vendite"
      Background="{StaticResource BackgroundColor}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Intestazione -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ’° Registro Vendite" 
                   Style="{StaticResource TitleTextStyle}"/>

        <!-- Barra di ricerca e filtri -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         x:Name="txtSearch" 
                         Margin="0,0,15,0" 
                         Style="{StaticResource TextBoxStyle}"
                         TextChanged="TxtSearch_TextChanged">
                    <TextBox.ToolTip>
                        <ToolTip Content="Cerca per nome carta o set..."/>
                    </TextBox.ToolTip>
                </TextBox>
                
                <DatePicker Grid.Column="1" 
                           x:Name="dpDateFilter" 
                           Width="180" 
                           Margin="0,0,15,0" 
                           Style="{StaticResource DatePickerStyle}"
                           SelectedDateChanged="DpDateFilter_SelectedDateChanged">
                    <DatePicker.ToolTip>
                        <ToolTip Content="Filtra per data vendita"/>
                    </DatePicker.ToolTip>
                </DatePicker>
                
                <Button Grid.Column="2" 
                        Content="âž• Registra Vendita" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BtnAddSale_Click"/>
            </Grid>
        </Border>

        <!-- Tabella vendite -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}" 
                Margin="0,0,0,20"
                Padding="0">
            <DataGrid x:Name="dgSales" 
                     Style="{StaticResource DataGridStyle}" 
                     ItemsSource="{Binding Sales}"
                     ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data" Binding="{Binding SaleDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                    <DataGridTextColumn Header="Nome Carta" Binding="{Binding Card.Name}" Width="*"/>
                    <DataGridTextColumn Header="Set" Binding="{Binding Card.Set}" Width="130"/>
                    <DataGridTextColumn Header="Prezzo Acquisto" Binding="{Binding Card.PurchasePrice, StringFormat=â‚¬ {0:N2}}" Width="130"/>
                    <DataGridTextColumn Header="Prezzo Vendita" Binding="{Binding SalePrice, StringFormat=â‚¬ {0:N2}}" Width="130"/>
                    <DataGridTextColumn Header="Fee" Binding="{Binding Fee, StringFormat=â‚¬ {0:N2}}" Width="90"/>
                    <DataGridTextColumn Header="Spedizione" Binding="{Binding ShippingCost, StringFormat=â‚¬ {0:N2}}" Width="110"/>
                    <DataGridTextColumn Header="QuantitÃ " Binding="{Binding Quantity}" Width="90"/>
                    <DataGridTextColumn Header="Profitto Netto" Binding="{Binding NetProfit, StringFormat=â‚¬ {0:N2}}" Width="130"/>
                    <DataGridTemplateColumn Width="80" Header="Azioni">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ—‘ï¸" 
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Elimina vendita"
                                        Click="BtnDeleteSale_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Riepilogo Statistiche -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Style="{StaticResource StatCardStyle}"
                    Background="{StaticResource InfoColor}">
                <StackPanel>
                    <TextBlock Text="Totale Vendite" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalSales" 
                               Text="0" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" 
                    Style="{StaticResource StatCardStyle}"
                    Background="{StaticResource SuccessColor}">
                <StackPanel>
                    <TextBlock Text="Totale Incassato" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalRevenue" 
                               Text="â‚¬ 0,00" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" 
                    Style="{StaticResource StatCardStyle}"
                    Background="{StaticResource AccentColor}">
                <StackPanel>
                    <TextBlock Text="Profitto Netto" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalProfit" 
                               Text="â‚¬ 0,00" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

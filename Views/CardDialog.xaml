<Window x:Class="PokemonCardManager.Views.CardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCardManager.Views"
        mc:Ignorable="d"
        Title="Dettagli Carta" Height="500" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Intestazione -->
        <TextBlock Grid.Row="0" x:Name="txtTitle" Text="Aggiungi Carta" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Nome Carta *" Margin="0,5,0,2"/>
                <TextBox x:Name="txtName" Margin="0,0,0,10"/>

                <TextBlock Text="Set *" Margin="0,5,0,2"/>
                <TextBox x:Name="txtSet" Margin="0,0,0,10"/>

                <TextBlock Text="Numero *" Margin="0,5,0,2"/>
                <TextBox x:Name="txtNumber" Margin="0,0,0,10"/>

                <TextBlock Text="Rarità" Margin="0,5,0,2"/>
                <ComboBox x:Name="cmbRarity" Margin="0,0,0,10">
                    <ComboBoxItem Content="Common"/>
                    <ComboBoxItem Content="Uncommon"/>
                    <ComboBoxItem Content="Rare"/>
                    <ComboBoxItem Content="Holo Rare"/>
                    <ComboBoxItem Content="Ultra Rare"/>
                    <ComboBoxItem Content="Secret Rare"/>
                </ComboBox>

                <TextBlock Text="Lingua" Margin="0,5,0,2"/>
                <ComboBox x:Name="cmbLanguage" Margin="0,0,0,10">
                    <ComboBoxItem Content="Italiano"/>
                    <ComboBoxItem Content="Inglese"/>
                    <ComboBoxItem Content="Giapponese"/>
                    <ComboBoxItem Content="Francese"/>
                    <ComboBoxItem Content="Tedesco"/>
                    <ComboBoxItem Content="Spagnolo"/>
                </ComboBox>

                <TextBlock Text="Condizione" Margin="0,5,0,2"/>
                <ComboBox x:Name="cmbCondition" Margin="0,0,0,10">
                    <ComboBoxItem Content="Mint"/>
                    <ComboBoxItem Content="Near Mint"/>
                    <ComboBoxItem Content="Excellent"/>
                    <ComboBoxItem Content="Good"/>
                    <ComboBoxItem Content="Poor"/>
                </ComboBox>

                <TextBlock Text="Prezzo d'Acquisto (€)" Margin="0,5,0,2"/>
                <TextBox x:Name="txtPurchasePrice" Margin="0,0,0,10"/>

                <TextBlock Text="Data Acquisto" Margin="0,5,0,2"/>
                <DatePicker x:Name="dpPurchaseDate" Margin="0,0,0,10"/>

                <TextBlock Text="Fonte" Margin="0,5,0,2"/>
                <TextBox x:Name="txtSource" Margin="0,0,0,10"/>

                <TextBlock Text="Prezzo Attuale (€)" Margin="0,5,0,2"/>
                <TextBox x:Name="txtCurrentPrice" Margin="0,0,0,10"/>

                <TextBlock Text="Quantità" Margin="0,5,0,2"/>
                <TextBox x:Name="txtQuantity" Text="1" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Annulla" Width="100" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="Salva" Width="100" Background="{StaticResource PrimaryColor}" Foreground="White" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
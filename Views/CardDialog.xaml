<Window x:Class="PokemonCardManager.Views.CardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCardManager.Views"
        mc:Ignorable="d"
        Title="Dettagli Carta" Height="750" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        MinHeight="600" MinWidth="550">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Intestazione con gradiente -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" 
                CornerRadius="12" Padding="20,15" Margin="0,0,0,20">
            <TextBlock x:Name="txtTitle" Text="Aggiungi Carta" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" TextAlignment="Center"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      Padding="0,0,5,0">
            <StackPanel>
                <!-- Sezione Ricerca PokÃ©mon -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Ricerca PokÃ©mon" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryColor}"
                                   Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Nome Carta *" 
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   Margin="0,0,0,6"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtName" Grid.Column="0" 
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,8,0"/>
                            <Button x:Name="btnSearchPokemon" Grid.Column="1" 
                                    Content="ðŸ” Cerca" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="16,10"
                                    Click="BtnSearchPokemon_Click" 
                                    ToolTip="Cerca informazioni sul PokÃ©mon su PokÃ©API"/>
                        </Grid>
                        
                        <!-- Immagine PokÃ©mon (se disponibile) -->
                        <Border x:Name="pokemonImageContainer" 
                                Margin="0,8,0,0" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="2" 
                                CornerRadius="12"
                                Visibility="Collapsed" 
                                HorizontalAlignment="Center"
                                Background="{StaticResource BackgroundColor}"
                                Padding="15">
                            <StackPanel>
                                <Image x:Name="imgPokemon" Width="120" Height="120" 
                                       Stretch="Uniform" Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtPokemonInfo" 
                                           TextAlignment="Center" 
                                           FontSize="11" 
                                           Foreground="{StaticResource TextSecondaryColor}"
                                           LineHeight="18"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Sezione Dettagli Carta -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Dettagli Carta" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryColor}"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Set -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                       Text="Set *" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbSet" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Margin="0,0,0,15"
                                      IsEditable="True"
                                      ToolTip="Seleziona o inserisci il set della carta"/>

                            <!-- Numero -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Numero *" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtNumber" Grid.Row="3" Grid.Column="0"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"/>

                            <!-- RaritÃ  -->
                            <TextBlock Grid.Row="2" Grid.Column="2"
                                       Text="RaritÃ " 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbRarity" Grid.Row="3" Grid.Column="2"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Margin="0,0,0,15">
                                <ComboBoxItem Content="Common"/>
                                <ComboBoxItem Content="Uncommon"/>
                                <ComboBoxItem Content="Rare"/>
                                <ComboBoxItem Content="Holo Rare"/>
                                <ComboBoxItem Content="Ultra Rare"/>
                                <ComboBoxItem Content="Secret Rare"/>
                            </ComboBox>

                            <!-- Lingua -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                       Text="Lingua" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbLanguage" Grid.Row="5" Grid.Column="0"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Margin="0,0,0,15">
                                <ComboBoxItem Content="Italiano"/>
                                <ComboBoxItem Content="Inglese"/>
                                <ComboBoxItem Content="Giapponese"/>
                                <ComboBoxItem Content="Francese"/>
                                <ComboBoxItem Content="Tedesco"/>
                                <ComboBoxItem Content="Spagnolo"/>
                            </ComboBox>

                            <!-- Condizione -->
                            <TextBlock Grid.Row="4" Grid.Column="2"
                                       Text="Condizione" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbCondition" Grid.Row="5" Grid.Column="2"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Margin="0,0,0,15">
                                <ComboBoxItem Content="Mint"/>
                                <ComboBoxItem Content="Near Mint"/>
                                <ComboBoxItem Content="Excellent"/>
                                <ComboBoxItem Content="Good"/>
                                <ComboBoxItem Content="Poor"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Sezione Finanziaria -->
                <Border Style="{StaticResource CardStyle}" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Informazioni Finanziarie" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryColor}"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Prezzo d'Acquisto -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Prezzo d'Acquisto (â‚¬)" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtPurchasePrice" Grid.Row="1" Grid.Column="0"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"/>

                            <!-- Prezzo Attuale -->
                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Text="Prezzo Attuale (â‚¬)" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtCurrentPrice" Grid.Row="1" Grid.Column="2"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"/>

                            <!-- Data Acquisto -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Data Acquisto" 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <DatePicker x:Name="dpPurchaseDate" Grid.Row="3" Grid.Column="0"
                                        Style="{StaticResource DatePickerStyle}"
                                        Margin="0,0,0,15"/>

                            <!-- QuantitÃ  -->
                            <TextBlock Grid.Row="2" Grid.Column="2"
                                       Text="QuantitÃ " 
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="txtQuantity" Grid.Row="3" Grid.Column="2"
                                     Text="1"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"/>
                        </Grid>

                        <!-- Fonte -->
                        <TextBlock Text="Fonte" 
                                   FontSize="13" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtSource" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annulla" Width="120" Height="40"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,12,0" 
                    Click="BtnCancel_Click"/>
            <Button Content="Salva" Width="120" Height="40"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
